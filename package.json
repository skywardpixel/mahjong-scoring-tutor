{
  "name": "mahjong-scoring-tutor",
  "private": false,
  "version": "1.0.0",
  "description": "Interactive web app for learning Japanese Mahjong scoring fundamentals",
  "type": "module",
  "homepage": "https://skywardpixel.github.io/mahjong-scoring-tutor",
  "repository": {
    "type": "git",
    "url": "git@github.com:skywardpixel/mahjong-scoring-tutor.git"
  },
  "keywords": [
    "mahjong",
    "japanese-mahjong",
    "riichi-mahjong",
    "scoring",
    "tutorial",
    "education",
    "react",
    "vite"
  ],
  "author": "skywardpixel",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
